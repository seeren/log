{
	"name" : "seeren/log",
	"description" : "Log message and determine level",
	"keywords" : [
		"logger",
		"log-level",
		"psr-3"
	],
	"type" : "library",
	"license" : "MIT",
	"authors" : [{
			"name" : "Cyril Ichti",
			"email" : "consultant@seeren.fr",
			"homepage" : "https://github.com/seeren/log"
		}
	],
	"require" : {
		"php" : ">=7.4.0",
        "psr/log": "~1.0"
	},
	"autoload" : {
		"psr-4" : {
			"Seeren\\Log\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Seeren\\Log\\Test\\" : "test/"
		}
	},
	"require-dev" : {
		"phpunit/phpunit": "9.4.0",
		"php-coveralls/php-coveralls": "v2.4.1"
	},
	"scripts": {
		"post-install-cmd": [
			"mkdir var",
			"cd var",
			"mkdir log",
			"cd log",
			"echo '' > .gitkeep"
		]
	}
}
